{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appLocation": {
            "type": "string"
        },
        "appName": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "indexDocument": {
            "type": "string"
        },
        "errorDocument404Path": {
            "type": "string"
        },
        "dnszones_externalid": {
            "type": "string"
        },
        "dbName": {
            "type": "string"
        }
    },
    "variables": {
        "resourceGroupName": "[concat(parameters('appName'), '-', parameters('environment'), '-rg')]"
    },
    "resources": [
        {
            "name": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2022-09-01",
            "location": "[parameters('appLocation')]",
            "dependsOn": [],
            "tags": {}
        },
        {
            "name": "deploy_storage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "resourceGroup": "[variables('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/storage_create.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/azuredeploy.parameters.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
            ]
        },
        {
            "name": "deploy_cdn",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "resourceGroup": "[variables('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/cdn_create.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                        "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/azuredeploy.parameters.json"
                    }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
            ]
        },
        {
            "name": "deploy_cosmosdb",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "resourceGroup": "[variables('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/db_create.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/azuredeploy.parameters.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
            ]
        },
     {
        "name": "deploy_script",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2022-09-01",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/deploy_script.json",
                "contentVersion": "1.0.0.0"
            },
            "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/countryguy775/website_backend/main/azuredeploy.parameters.json"
                }
        },
        "dependsOn": [
            "[resourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
        ]
     }
    ]
  }