{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "DnsZone": {
            "type": "string"
        },
        "storageWebEndpoint": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        }
    },
    "variables": {
        "profileName": "[concat(parameters('appName'), '-', parameters('environment'), '-afd')]",
        "originGroupName": "[concat(parameters('environment'), '-origin-group')]",
        "customhostName": "[concat(parameters('environment'), '.', parameters('domainName'))]",
        "originName": "[concat(parameters('environment'), '-origin')]",
        "routeName": "[concat(parameters('environment'), '-route')]"
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2021-06-01",
            "name": "[variables('profileName')]",
            "location": "Global",
            "tags": {
                "Environment": "[parameters('environment')]"
            },
            "sku": {
                "name": "Standard_AzureFrontDoor"
            },
            "kind": "frontdoor",
            "properties": {}
        },
        {
            "type": "Microsoft.Cdn/profiles/afdEndpoints",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', substring(parameters('domainName'),0,sub(length(parameters('domainName')),4)))]",
            "location": "Global",
            "tags": {
                "Environment": "[parameters('environment')]"
            },
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', variables('originGroupName'))]",
            "tags": {
                "Environment": "[parameters('environment')]"
            },
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/customDomains",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', replace(variables('customhostName'), '.', '-'))]",
            "tags": {
                "Environment": "[parameters('environment')]"
            },
            "properties": {
                "hostName": "[variables('customhostName')]",
                "tlsSettings": {
                    "certificateType": "ManagedCertificate",
                    "minimumTlsVersion": "TLS12"
                },
                "azureDnsZone": {
                    "id": "[parameters('DnsZone')]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups/origins",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', variables('origingroupName'), '/', variables('originName'))]",
            "tags": {
                "Environment": "[parameters('environment')]"
            },
            "properties": {
                "hostName": "[substring(parameters('storageWebEndpoint'), 8, sub(length(parameters('storageWebEndpoint')), 9))]",
                "httpPort": 80,
                "httpsPort": 443,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/originGroups', variables('profileName'), variables('originGroupName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/afdEndpoints/routes",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', substring(parameters('domainName'),0,sub(length(parameters('domainName')),4)), '/', variables('routeName'))]",
            "properties": {
                "customDomains": [
                    {
                        "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('profileName'), replace(variables('customhostName'),'.','-'))]"
                    }
                ],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('profileName'), variables('origingroupName'))]"
                },
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "forwardingProtocol": "MatchRequest",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "Enabled",
                "enabledState": "Enabled"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', variables('profileName'), substring(parameters('domainName'),0,sub(length(parameters('domainName')),4)))]",
                "[resourceId('Microsoft.Cdn/profiles/originGroups', variables('profileName'), variables('originGroupName'))]",
                "[resourceId('Microsoft.Cdn/profiles/customDomains', variables('profileName'), replace(variables('customhostName'),'.','-'))]"
            ]
        }
    ],
    "outputs": {
        "profileName": {
            "type": "string",
            "value": "[variables('profileName')]"
        },
        "customDomainName": {
            "type": "string",
            "value": "[replace(variables('customhostName'),'.','-')]"
        },
        "endpointName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Cdn/profiles/afdEndpoints', variables('profileName'), substring(parameters('domainName'),0,sub(length(parameters('domainName')),4)))).hostName]"
        }
    }
}