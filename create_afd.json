{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "dnszones_externalid": {
            "type": "string"
        },
        "storageEndpoint": {
            "type": "string"
        }
    },
    "variables": {
        "profileName": "[concat(parameters('appName'), '-afd')]",
        "originGroupName": "[concat(parameters('environment'), '-origin-group')]",
        "customdomainName": "[concat(parameters('environment'), '-thehodgesfamily-net')]",
        "customhostName": "[concat(parameters('environment'), '.thehodgesfamily.net')]",
        "originName": "[concat(parameters('environment'), '-origin')]",
        "routeName": "[concat(parameters('environment'), '-route')]"
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2021-06-01",
            "name": "[variables('profileName')]",
            "location": "Global",
            "sku": {
                "name": "Standard_AzureFrontDoor"
            },
            "kind": "frontdoor",
            "properties": {}
        },
        {
            "type": "Microsoft.Cdn/profiles/afdEndpoints",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/thehodgesfamily')]",
            "location": "Global",
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', variables('originGroupName'))]",
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/customDomains",
            "apiVersion": "2021-06-01",
            "name": "[concat(variables('profileName'), '/', variables('customdomainName'))]",
            "properties": {
                "hostName": "[variables('customhostName')]",
                "tlsSettings": {
                    "certificateType": "ManagedCertificate",
                    "minimumTlsVersion": "TLS12"
                },
                "azureDnsZone": {
                    "id": "[parameters('dnszones_externalid')]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles/originGroups/origins",
            "apiVersion": "2021-06-01",
            "name": "[replace(substring(parameters('storageEndpoint'), 8, sub(length(parameters('storageEndpoint')), 9)), '.', '-')]",
            "properties": {
                "hostName": "[substring(parameters('storageEndpoint'), 8, sub(length(parameters('storageEndpoint')), 9))]",
                "httpPort": 80,
                "httpsPort": 443,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            },
            "dependsOn": []
        }
    ]
}