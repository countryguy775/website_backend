{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appLocation": {
            "type": "string"
        },
        "appName": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "indexDocument": {
            "type": "string"
        },
        "errorDocument404Path": {
            "type": "string"
        },
        "dnszones_externalid": {
            "type": "string"
        },
        "dbName": {
            "type": "string"
        }
    },
    "variables": {
        "profileName": "[concat(parameters('appName'), '-cdn')]",
        "origingroupName": "[concat(parameters('environment'), '-origin-group')]",
        "originName": "[concat(parameters('environment'), '-origin')]",
        "customdomainName": "[concat(parameters('environment'), '-thehodgesfamily-net')]",
        "customhostName": "[concat(parameters('environment'), '.thehodgesfamily.net')]",
        "routeName": "[concat(parameters('environment'), '-route')]" 
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2022-11-01-preview",
            "name": "[variables('profileName')]",
            "location": "Global",
            "sku": {
                "name": "Standard_AzureFrontDoor"
            },
            "kind": "frontdoor",
            "properties": {
                "originResponseTimeoutSeconds": 60,
                "extendedProperties": {}
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints",
            "apiVersion": "2022-11-01-preview",
            "name": "[concat(variables('profileName'), '/thehodgesfamily')]",
            "location": "Global",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ],
            "properties": {
                "enabledState": "Enabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups",
            "apiVersion": "2022-11-01-preview",
            "name": "[concat(variables('profileName'), '/', variables('origingroupName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ],
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Http",
                    "probeIntervalInSeconds": 100
                },
                "sessionAffinityState": "Disabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/customdomains",
            "apiVersion": "2022-11-01-preview",
            "name": "[concat(variables('profileName'), '/', variables('customdomainName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]"
            ],
            "properties": {
                "hostName": "[variables('customhostName')]",
                "tlsSettings": {
                    "certificateType": "ManagedCertificate",
                    "minimumTlsVersion": "TLS12"
                },
                "azureDnsZone": {
                    "id": "[parameters('dnszones_externalid')]"
                }
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/origingroups/origins",
            "apiVersion": "2022-11-01-preview",
            "name": "[concat(variables('profileName'), '/', variables('origingroupName'), '/', variables('originName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('profileName'), variables('origingroupName'))]",
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]",
                "[resourceId('Microsoft.Resources/deployments', 'deploy_storage')]"
            ],
            "properties": {
                "hostName": "[reference('deploy_storage').outputs.storageEndpoint.value]",
                "httpPort": 80,
                "httpsPort": 443,
                "enabledState": "Enabled",
                "enforceCertificateNameCheck": true
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2022-11-01-preview",
            "name": "[concat(variables('profileName'), '/thehodgesfamily/', variables('routeName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/afdendpoints', variables('profileName'), 'thehodgesfamily')]",
                "[resourceId('Microsoft.Cdn/profiles', variables('profileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('profileName'), variables('customdomainName'))]",
                "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('profileName'), variables('origingroupName'))]"
            ],
            "properties": {
                "customDomains": [
                    {
                        "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('profileName'), variables('customdomainName'))]"
                    }
                ],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('profileName'), variables('origingroupName'))]"
                },
                "ruleSets": [],
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "forwardingProtocol": "MatchRequest",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "Enabled",
                "enabledState": "Enabled"
            }
        }
    ]
}